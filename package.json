{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "npm run build:css && vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "npm run build:css && npm run build:app && npm run copy:static",
    "build:app": "vite build",
    "build:css": "npx tailwindcss -i ./src/globals.css -o ./public/static/style.css --minify",
    "copy:static": "cp -r public/static dist/",
    "watch:css": "npx tailwindcss -i ./src/globals.css -o ./public/static/style.css --watch",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name webapp",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "dependencies": {
    "hono": "^4.10.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@vercel/node": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
